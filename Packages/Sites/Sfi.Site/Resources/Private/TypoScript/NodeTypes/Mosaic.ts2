prototype(Sfi.Site:Mosaic) < prototype(TYPO3.TypoScript:Tag) {
	attributes.class = 'Mosaic'
	content = TYPO3.Neos:ContentCollectionRenderer

	prototype(TYPO3.Neos.NodeTypes:Image) {
		attributes.class = 'Mosaic-Item'
		maximumWidth = 320
	}

	@process.contentElementWrapping = TYPO3.Neos:ContentElementWrapping
	@process.wrap = ${'<div>' + value + '</div>'}
	@cache {
		mode = 'cached'
		entryTags {
			1 = ${'Node_' + node.identifier}
			2 = ${'DescendantOf_' + node.identifier}
		}
	}
}
